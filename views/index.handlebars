<div class="container">

	<header class="header">
		
		<img src="assets/images/burger.png" class="header__img">

		<h1 class="header__text">'Ave a burger!</h1>

	</header>

	<div class="row section__burgers">

		<div class="section__to-eat six columns">
			
			<h3 class="section__title">Burgers to eat...</h3>

			<ul>

				{{#each burgers}}

					{{#unless devoured}}

						{{> burgers/to-eat-block}}

					{{/unless}}

				{{/each}}

			</ul>

		</div>

		<div class="section__eaten six columns">

			<h3 class="section__title">Burgers eaten...</h3>

			<ul>

				{{#each burgers}}

					{{#if devoured}}

						{{> burgers/eaten-block}}

					{{/if}}

				{{/each}}

			</ul>

		</div>

	</div>

	<div class="row form">

		<form class="input">
		
			<input type="text" id="form__user-input" name="name">

			<p id="form__text">Enter the burger you fancy then click the submit button</p>

			<button class="form__submit-btn">Submit</button>

		</form>

	</div>

</div>